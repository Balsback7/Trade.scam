local b=Instance.new("TextButton",game.Players.LocalPlayer:WaitForChild("PlayerGui"):WaitForChild("ScreenGui"))
b.Size,b.Position,b.Text=UDim2.new(0,200,0,50),UDim2.new(0.5,-100,0.5,-25),"Start Timer"
b.MouseButton1Click:Connect(function() for t=180,1,-1 do print(t.." seconds left") wait(1) end print("Time's up!") end)
